<UserControl x:Class="PicSim.Views.HelpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PicSim.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">


    <StackPanel>
        <Button Width="150" x:Name="OpenPDFFile" Content="Open Documentation" HorizontalAlignment="Left"/>
        <TextBlock><LineBreak/></TextBlock>
        <Label Content="Hilfe für Simulator" FontWeight="ExtraBold"/>
        <TextBlock FontWeight="DemiBold">
            <LineBreak/>
            Start:      Startet das geladene Programm<LineBreak/>
            Step:       Der nächste Befehl im Programm ausgeführt<LineBreak/>
            Stop:       Das laufende Programm wird abgebrochen und der RAM wird refresht<LineBreak/>
            <LineBreak/>
            OpenFile:   LST-Datei in den Simulator laden
        </TextBlock>
    </StackPanel>
        
</UserControl>
